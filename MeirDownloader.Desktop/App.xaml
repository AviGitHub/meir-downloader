<Application x:Class="MeirDownloader.Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MeirDownloader.Desktop"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Color theme (swappable at runtime by ThemeManager) -->
                <ResourceDictionary Source="Theme/LightTheme.xaml"/>
                <!-- Styles (always loaded, references colors via DynamicResource) -->
                <ResourceDictionary Source="Theme/ModernTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
