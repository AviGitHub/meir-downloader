<Window x:Class="MeirDownloader.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:MeirDownloader.Desktop.Converters"
        Title="מוריד שיעורים - Meir Downloader" Height="768" Width="1200"
        Background="{StaticResource BackgroundBrush}"
        FlowDirection="RightToLeft"
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/icon.ico"
        FontFamily="Segoe UI">

    <Window.Resources>
        <converters:DownloadStatusToColorConverter x:Key="StatusToColor"/>
        <converters:DownloadStatusToVisibilityConverter x:Key="StatusToVisibility"/>
        <converters:TextToInitialConverter x:Key="TextToInitialConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>

        <!-- Main Content (Left) -->
        <Grid Grid.Column="0" Margin="30,30,10,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Top Bar -->
                <RowDefinition Height="Auto"/> <!-- Series List -->
                <RowDefinition Height="*"/>    <!-- Lessons List -->
                <RowDefinition Height="Auto"/> <!-- Status Bar -->
            </Grid.RowDefinitions>

            <!-- Top Bar -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="מוריד שיעורים" Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Text="הורדת שיעורים ממכון מאיר" Foreground="{StaticResource TextSecondaryBrush}" FontSize="14"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="DownloadPathText" 
                               Text="תיקיית הורדה: ..." 
                               VerticalAlignment="Center" 
                               Foreground="{StaticResource TextSecondaryBrush}" 
                               Margin="0,0,15,0"
                               TextTrimming="CharacterEllipsis" 
                               MaxWidth="300"/>
                    <Button x:Name="ChooseFolderButton" 
                            Content="בחר תיקייה" 
                            Click="ChooseFolderButton_Click"
                            Style="{StaticResource SecondaryButtonStyle}"/>
                </StackPanel>
            </Grid>

            <!-- Series Selection -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="סדרות" Style="{StaticResource SectionHeaderStyle}"/>
                
                <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Padding="0,0,0,10">
                    <ListBox x:Name="SeriesListBox" 
                             SelectionChanged="SeriesListBox_SelectionChanged"
                             Background="Transparent" 
                             BorderThickness="0"
                             ItemContainerStyle="{StaticResource SeriesListBoxItemStyle}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Vertical" Height="130"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="{Binding Name}" 
                                               FontWeight="Bold" 
                                               TextWrapping="Wrap" 
                                               FontSize="14"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <Border Grid.Row="1" 
                                            Background="{StaticResource AccentBrush}" 
                                            CornerRadius="10" 
                                            Padding="8,2" 
                                            HorizontalAlignment="Left" 
                                            Margin="0,5,0,0">
                                        <TextBlock Text="{Binding Count, StringFormat='{}{0} שיעורים'}" 
                                                   FontSize="11" 
                                                   Foreground="White"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>

                <!-- Series Loading -->
                <StackPanel x:Name="SeriesLoadingBar" Grid.Row="1" Visibility="Collapsed"
                            VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                    <ProgressBar IsIndeterminate="True" Height="4" Width="150" Foreground="{StaticResource AccentBrush}"/>
                    <TextBlock Text="טוען סדרות..." TextAlignment="Center" Margin="0,8,0,0" Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
            </Grid>

            <!-- Lessons List -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="שיעורים" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button x:Name="DownloadSeriesButton" Content="הורד סדרה" Click="DownloadSeriesButton_Click" 
                                Style="{StaticResource ModernButtonStyle}" Margin="0,0,10,0" IsEnabled="False"/>
                        <Button x:Name="DownloadAllButton" Content="הורד הכל" Click="DownloadAllButton_Click" 
                                Style="{StaticResource ModernButtonStyle}" Margin="0,0,10,0" IsEnabled="False"/>
                        <Button x:Name="CancelDownloadButton" Content="בטל הורדה" Click="CancelDownloadButton_Click" 
                                Style="{StaticResource ModernButtonStyle}" Background="{StaticResource ErrorBrush}" 
                                IsEnabled="False" Visibility="Collapsed"/>
                    </StackPanel>
                </Grid>

                <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="0" ClipToBounds="True">
                    <Grid>
                        <DataGrid x:Name="LessonsGrid" Style="{StaticResource ModernDataGridStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="#" Binding="{Binding LessonNumber}" Width="50"/>
                                <DataGridTextColumn Header="שם השיעור" Binding="{Binding Title}" Width="*"/>
                                <DataGridTextColumn Header="תאריך" Binding="{Binding FormattedDate}" Width="120"/>
                                
                                <DataGridTemplateColumn Header="סטטוס" Width="200">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <ProgressBar Value="{Binding ProgressPercentage, Mode=OneWay}"
                                                             Maximum="100" Height="6" VerticalAlignment="Bottom"
                                                             Foreground="{Binding Status, Converter={StaticResource StatusToColor}}"
                                                             Background="#F1F5F9" BorderThickness="0"/>
                                                <TextBlock Text="{Binding StatusText, Mode=OneWay}"
                                                           HorizontalAlignment="Left" VerticalAlignment="Top"
                                                           FontSize="11" Margin="0,0,0,8"/>
                                            </Grid>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="פעולה" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="הורד" Click="DownloadButton_Click"
                                                    Style="{StaticResource SecondaryButtonStyle}"
                                                    Padding="10,4" FontSize="12"
                                                    Visibility="{Binding Status, Converter={StaticResource StatusToVisibility}}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Lessons Loading -->
                        <StackPanel x:Name="LessonsLoadingBar" Visibility="Collapsed"
                                    VerticalAlignment="Center" HorizontalAlignment="Center">
                            <ProgressBar IsIndeterminate="True" Height="4" Width="200" Foreground="{StaticResource AccentBrush}"/>
                            <TextBlock Text="טוען שיעורים..." TextAlignment="Center" Margin="0,8,0,0" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Status Bar -->
            <Grid Grid.Row="3" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <ProgressBar x:Name="OverallProgressBar" Height="4" Foreground="{StaticResource AccentBrush}" Maximum="100" Value="0" Background="#E2E8F0"/>
                    <TextBlock x:Name="StatusText" Text="מוכן" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,5,0,0"/>
                </StackPanel>
                
                <TextBlock x:Name="OverallProgressText" Grid.Column="1" Text="" VerticalAlignment="Bottom" Foreground="{StaticResource TextPrimaryBrush}" Margin="10,0,0,0"/>
            </Grid>
        </Grid>

        <!-- Sidebar (Right) -->
        <Border Grid.Column="1" Background="White" Effect="{StaticResource CardShadow}">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="רבנים" Style="{StaticResource SectionHeaderStyle}"/>
                    <!-- Search Box Placeholder -->
                    <Border Background="#F1F5F9" CornerRadius="6" Padding="10,8">
                        <TextBlock Text="חפש רב..." Foreground="#94A3B8"/>
                    </Border>
                </StackPanel>

                <ListBox x:Name="RabbiListBox" Grid.Row="1"
                         SelectionChanged="RabbiListBox_SelectionChanged"
                         Background="Transparent" BorderThickness="0"
                         ItemContainerStyle="{StaticResource RabbiListBoxItemStyle}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Avatar Placeholder -->
                                <Border Grid.Column="0" Width="40" Height="40" CornerRadius="20" Background="#E2E8F0" Margin="0,0,10,0">
                                    <TextBlock Text="{Binding Name, Converter={StaticResource TextToInitialConverter}}"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}"/>
                                </Border>
                                
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding Count, StringFormat='{}{0} שיעורים'}" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Rabbi Loading -->
                <StackPanel x:Name="RabbiLoadingBar" Grid.Row="1" Visibility="Collapsed"
                            VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Height="4" Width="100" Foreground="{StaticResource AccentBrush}"/>
                    <TextBlock Text="טוען..." TextAlignment="Center" Margin="0,8,0,0" Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>

                <Button Grid.Row="2" Content="טען מחדש" Click="RefreshButton_Click" 
                        Style="{StaticResource SecondaryButtonStyle}" Margin="0,20,0,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
