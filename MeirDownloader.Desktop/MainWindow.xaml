<Window x:Class="MeirDownloader.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:MeirDownloader.Desktop.Converters"
        Title="专 砖注专 - Meir Downloader" Height="700" Width="1000"
        Background="#F5F5F5"
        FlowDirection="RightToLeft"
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/icon.ico">

    <Window.Resources>
        <converters:DownloadStatusToColorConverter x:Key="StatusToColor"/>
        <converters:DownloadStatusToVisibilityConverter x:Key="StatusToVisibility"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="#2C3E50">
            <StackPanel Margin="20">
                <TextBlock Text="专 砖注专" FontSize="28" FontWeight="Bold" Foreground="White" TextAlignment="Right"/>
                <TextBlock Text="Meir Downloader - Download Lessons from Machon Meir" FontSize="12" Foreground="#BDC3C7" TextAlignment="Right" Margin="0,5,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Settings Bar - Folder Picker -->
        <Grid Grid.Row="1" Background="#34495E" Height="40">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                <Button x:Name="ChooseFolderButton" Content=" 专 转拽" Click="ChooseFolderButton_Click"
                        Background="#3498DB" Foreground="White" Padding="10,5" Cursor="Hand"
                        Margin="0,0,10,0" BorderThickness="0"/>
                <TextBlock x:Name="DownloadPathText"
                           Text="转拽转 专: ..." Foreground="#ECF0F1"
                           VerticalAlignment="Center" FontSize="12"
                           TextTrimming="CharacterEllipsis" MaxWidth="600"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="2" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Grid Grid.Column="0" Background="White" Margin="0,0,15,0">
                <StackPanel Margin="15">
                    <TextBlock Text="专 专" FontSize="14" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,10"/>
                    <ListBox x:Name="RabbiListBox" Height="200" Background="#ECF0F1" BorderThickness="0"
                             SelectionChanged="RabbiListBox_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" Padding="10,5"/>
                                    <TextBlock Text="{Binding Count, StringFormat=' ({0})'}" Padding="0,5" Foreground="#7F8C8D"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <!-- Rabbi loading indicator -->
                    <ProgressBar x:Name="RabbiLoadingBar" Height="3" IsIndeterminate="True"
                                 Foreground="#3498DB" Visibility="Collapsed" Margin="0,2,0,0"/>

                    <TextBlock Text="专 住专" FontSize="14" FontWeight="Bold" Foreground="#2C3E50" Margin="0,20,0,10"/>
                    <ListBox x:Name="SeriesListBox" Height="200" Background="#ECF0F1" BorderThickness="0"
                             SelectionChanged="SeriesListBox_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" Padding="10,5"/>
                                    <TextBlock Text="{Binding Count, StringFormat=' ({0})'}" Padding="0,5" Foreground="#7F8C8D"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <!-- Series loading indicator -->
                    <ProgressBar x:Name="SeriesLoadingBar" Height="3" IsIndeterminate="True"
                                 Foreground="#3498DB" Visibility="Collapsed" Margin="0,2,0,0"/>

                    <Button Content="注 砖" Click="RefreshButton_Click" Background="#3498DB" Foreground="White" 
                            FontWeight="Bold" Padding="10,8" Margin="0,20,0,0" Cursor="Hand" BorderThickness="0"/>
                </StackPanel>
            </Grid>

            <!-- Main Content Area -->
            <Grid Grid.Column="1" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Grid.Row="0" Text="砖注专" FontSize="16" FontWeight="Bold" Foreground="#2C3E50" Margin="15,15,15,10"/>

                <!-- Lessons loading indicator -->
                <ProgressBar Grid.Row="1" x:Name="LessonsLoadingBar" Height="3" IsIndeterminate="True"
                             Foreground="#3498DB" Visibility="Collapsed" Margin="15,0,15,5"/>

                <!-- DataGrid -->
                <DataGrid Grid.Row="2" x:Name="LessonsGrid" AutoGenerateColumns="False" Background="White" 
                         RowHeaderWidth="0" BorderThickness="0" Margin="15,0,15,10"
                         IsReadOnly="True" SelectionMode="Single">
                    <DataGrid.Columns>
                        <!-- Lesson Number -->
                        <DataGridTextColumn Header="#" Binding="{Binding LessonNumber}" Width="40"/>

                        <!-- Lesson Title -->
                        <DataGridTextColumn Header="砖 砖注专" Binding="{Binding Title}" Width="*"/>

                        <!-- Date -->
                        <DataGridTextColumn Header="转专" Binding="{Binding Date}" Width="100"/>

                        <!-- Progress Bar + Status Column -->
                        <DataGridTemplateColumn Header="住住" Width="180">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <ProgressBar Value="{Binding ProgressPercentage, Mode=OneWay}"
                                                     Maximum="100" Height="22"
                                                     Foreground="{Binding Status, Converter={StaticResource StatusToColor}}"/>
                                        <TextBlock Text="{Binding StatusText, Mode=OneWay}"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                                   FontSize="11" FontWeight="SemiBold"/>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Individual Download Button -->
                        <DataGridTemplateColumn Header="驻注" Width="70">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="专" Click="DownloadButton_Click"
                                            Background="#27AE60" Foreground="White"
                                            Padding="8,4" Cursor="Hand" BorderThickness="0"
                                            Visibility="{Binding Status, Converter={StaticResource StatusToVisibility}}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Download Buttons Toolbar -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="15,5,15,10" HorizontalAlignment="Right">
                    <Button x:Name="DownloadSeriesButton" Content="专 住专" Click="DownloadSeriesButton_Click" 
                            Background="#27AE60" Foreground="White" FontWeight="Bold" Padding="15,8" Margin="0,0,10,0" Cursor="Hand"
                            IsEnabled="False" BorderThickness="0"/>
                    <Button x:Name="DownloadAllButton" Content="专 " Click="DownloadAllButton_Click" 
                            Background="#27AE60" Foreground="White" FontWeight="Bold" Padding="15,8" Margin="0,0,10,0" Cursor="Hand"
                            IsEnabled="False" BorderThickness="0"/>
                    <Button x:Name="CancelDownloadButton" Content=" 专" Click="CancelDownloadButton_Click" 
                            Background="#E74C3C" Foreground="White" FontWeight="Bold" Padding="15,8" Cursor="Hand"
                            IsEnabled="False" Visibility="Collapsed" BorderThickness="0"/>
                </StackPanel>

                <!-- Overall Progress Section -->
                <Grid Grid.Row="4" Margin="15,0,15,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ProgressBar x:Name="OverallProgressBar" Grid.Column="0" Height="20" 
                                 Foreground="#27AE60" Maximum="100" Value="0"/>
                    <TextBlock x:Name="OverallProgressText" Grid.Column="1" Text="" 
                               VerticalAlignment="Center" Foreground="#2C3E50" Margin="10,0,0,0" FontSize="12"/>
                </Grid>

                <!-- Status Bar -->
                <Grid Grid.Row="5" Background="#ECF0F1" Margin="0">
                    <TextBlock x:Name="StatusText" Text="" VerticalAlignment="Center" Foreground="#2C3E50" Margin="15,8"/>
                </Grid>
            </Grid>
        </Grid>

        <!-- Footer -->
        <Grid Grid.Row="3" Background="#ECF0F1">
            <TextBlock Text="漏 2026 Meir Downloader" Foreground="#7F8C8D" FontSize="11" Margin="15"/>
        </Grid>
    </Grid>
</Window>
