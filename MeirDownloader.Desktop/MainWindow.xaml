<Window x:Class="MeirDownloader.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:MeirDownloader.Desktop.Converters"
        Title="专 砖注专 - Meir Downloader" Height="768" Width="1200"
        Background="{StaticResource BackgroundBrush}"
        FlowDirection="RightToLeft"
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/icon.ico"
        FontFamily="Segoe UI">

    <Window.Resources>
        <converters:DownloadStatusToColorConverter x:Key="StatusToColor"/>
        <converters:DownloadStatusToVisibilityConverter x:Key="StatusToVisibility"/>
        <converters:TextToInitialConverter x:Key="TextToInitial"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="320"/>
        </Grid.ColumnDefinitions>

        <!-- Main Content (Left) -->
        <Grid Grid.Column="0" Margin="30,30,10,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Top Bar -->
                <RowDefinition Height="Auto"/> <!-- Series List -->
                <RowDefinition Height="*"/>    <!-- Lessons List -->
                <RowDefinition Height="Auto"/> <!-- Status Bar -->
            </Grid.RowDefinitions>

            <!-- Top Bar -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="专 砖注专" Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Text="专转 砖注专  专" Foreground="{StaticResource TextSecondaryBrush}" FontSize="14"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="DownloadPathText" 
                               Text="转拽转 专: ..." 
                               VerticalAlignment="Center" 
                               Foreground="{StaticResource TextSecondaryBrush}" 
                               Margin="0,0,15,0"
                               TextTrimming="CharacterEllipsis" 
                               MaxWidth="300"/>
                    <Button x:Name="ChooseFolderButton" 
                            Content="专 转拽" 
                            Click="ChooseFolderButton_Click"
                            Style="{StaticResource SecondaryButtonStyle}"/>
                </StackPanel>
            </Grid>

            <!-- Series Selection -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="住专转" Style="{StaticResource SectionHeaderStyle}"/>
                
                <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Padding="0,0,0,10">
                    <ListBox x:Name="SeriesListBox" 
                             SelectionChanged="SeriesListBox_SelectionChanged"
                             Background="Transparent" 
                             BorderThickness="0"
                             ItemContainerStyle="{StaticResource SeriesListBoxItemStyle}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Vertical" Height="130"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="{Binding Name}" 
                                               FontWeight="Bold" 
                                               TextWrapping="Wrap" 
                                               FontSize="14"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <Border Grid.Row="1" 
                                            Background="{StaticResource AccentBrush}" 
                                            CornerRadius="10" 
                                            Padding="8,2" 
                                            HorizontalAlignment="Left" 
                                            Margin="0,5,0,0">
                                        <TextBlock Text="{Binding Count, StringFormat='{}{0} 砖注专'}" 
                                                   FontSize="11" 
                                                   Foreground="White"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>

                <!-- Series Loading -->
                <StackPanel x:Name="SeriesLoadingBar" Grid.Row="1" Visibility="Collapsed"
                            VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                    <ProgressBar IsIndeterminate="True" Height="4" Width="150" Foreground="{StaticResource AccentBrush}"/>
                    <TextBlock Text="注 住专转..." TextAlignment="Center" Margin="0,8,0,0" Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
            </Grid>

            <!-- Lessons List -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="砖注专" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button x:Name="DownloadSeriesButton" Content="专 住专" Click="DownloadSeriesButton_Click"
                                Style="{StaticResource ModernButtonStyle}" Margin="10,0,0,0" IsEnabled="False"/>
                        <Button x:Name="CancelDownloadButton" Content=" 专" Click="CancelDownloadButton_Click"
                                Style="{StaticResource ModernButtonStyle}" Background="{StaticResource ErrorBrush}"
                                Margin="10,0,0,0" IsEnabled="False" Visibility="Collapsed"/>
                        <Button x:Name="OpenDirectoryButton" Content=" 驻转 转拽" Click="OpenDirectoryButton_Click"
                                Style="{StaticResource SecondaryButtonStyle}" Margin="10,0,0,0"
                                IsEnabled="False" Visibility="Collapsed"
                                ToolTip="驻转 转 转拽转 专"/>
                    </StackPanel>
                </Grid>

                <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="0" ClipToBounds="True">
                    <Grid>
                        <DataGrid x:Name="LessonsGrid" Style="{StaticResource ModernDataGridStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="#" Binding="{Binding LessonNumber}" Width="50"/>
                                <DataGridTextColumn Header="砖 砖注专" Binding="{Binding Title}" Width="*"/>
                                <DataGridTextColumn Header="转专" Binding="{Binding FormattedDate}" Width="120"/>
                                
                                <DataGridTemplateColumn Header="住住" Width="200">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <ProgressBar Value="{Binding ProgressPercentage, Mode=OneWay}"
                                                             Maximum="100" Height="6" VerticalAlignment="Bottom"
                                                             Foreground="{Binding Status, Converter={StaticResource StatusToColor}}"
                                                             Background="#F1F5F9" BorderThickness="0"/>
                                                <TextBlock Text="{Binding StatusText, Mode=OneWay}"
                                                           HorizontalAlignment="Left" VerticalAlignment="Top"
                                                           FontSize="11" Margin="0,0,0,8"/>
                                            </Grid>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn Header="驻注" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="专" Click="DownloadButton_Click"
                                                    Style="{StaticResource SecondaryButtonStyle}"
                                                    Padding="10,4" FontSize="12"
                                                    Visibility="{Binding Status, Converter={StaticResource StatusToVisibility}}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Lessons Loading -->
                        <StackPanel x:Name="LessonsLoadingBar" Visibility="Collapsed"
                                    VerticalAlignment="Center" HorizontalAlignment="Center">
                            <ProgressBar IsIndeterminate="True" Height="4" Width="200" Foreground="{StaticResource AccentBrush}"/>
                            <TextBlock Text="注 砖注专..." TextAlignment="Center" Margin="0,8,0,0" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Status Bar -->
            <Grid Grid.Row="3" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <ProgressBar x:Name="OverallProgressBar" Height="4" Foreground="{StaticResource AccentBrush}" Maximum="100" Value="0" Background="#E2E8F0"/>
                    <TextBlock x:Name="StatusText" Text="" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,5,0,0"/>
                </StackPanel>
                
                <TextBlock x:Name="OverallProgressText" Grid.Column="1" Text="" VerticalAlignment="Bottom" Foreground="{StaticResource TextPrimaryBrush}" Margin="10,0,0,0"/>
                
                <TextBlock x:Name="VersionText" Grid.Column="2"
                           Text="v1.1.0"
                           FontSize="10"
                           Opacity="0.4"
                           Foreground="#888888"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Left"
                           Margin="15,0,0,0"/>

                <Button x:Name="AboutButton" Grid.Column="3" Content="转" Click="AboutButton_Click"
                        VerticalAlignment="Bottom" Margin="10,0,0,0" Padding="0" Cursor="Hand"
                        ToolTip="转 转">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <TextBlock x:Name="aboutText" Text="{TemplateBinding Content}"
                                       FontSize="10" Foreground="#888888" Opacity="0.5"
                                       TextDecorations="Underline" Cursor="Hand"/>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="aboutText" Property="Opacity" Value="1.0"/>
                                    <Setter TargetName="aboutText" Property="Foreground" Value="{StaticResource AccentBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Grid>

        <!-- Sidebar (Right) -->
        <Border Grid.Column="1" Background="White" Effect="{StaticResource CardShadow}">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="专" Style="{StaticResource SectionHeaderStyle}"/>
                    <!-- Search Box -->
                    <Border Background="#F1F5F9" CornerRadius="6" Padding="5">
                        <TextBox x:Name="SearchTextBox"
                                 TextChanged="SearchTextBox_TextChanged"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"
                                 Padding="5,0"/>
                    </Border>
                </StackPanel>

                <ListBox x:Name="RabbiListBox" Grid.Row="1"
                         SelectionChanged="RabbiListBox_SelectionChanged"
                         Background="Transparent" BorderThickness="0"
                         ItemContainerStyle="{StaticResource RabbiListBoxItemStyle}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="8,6" ToolTip="{Binding Name}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="44"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Avatar Image (with fallback to initials) -->
                                <Border Grid.Column="0" Width="40" Height="40" CornerRadius="20"
                                        ClipToBounds="True" Background="#E8F5E9">
                                    <Grid>
                                        <!-- Fallback: Initial letter -->
                                        <TextBlock Text="{Binding Name, Converter={StaticResource TextToInitial}}"
                                                   FontSize="16" FontWeight="Bold" Foreground="#1ABC9C"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <!-- Image overlay (covers initials when loaded) -->
                                        <Image Source="{Binding AvatarImage}" Stretch="UniformToFill"
                                               Width="40" Height="40"/>
                                        
                                        <!-- Loading Indicator -->
                                        <Grid Visibility="{Binding IsImageLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                                              Background="#80FFFFFF">
                                            <ProgressBar IsIndeterminate="True" Width="20" Height="20"
                                                         Style="{StaticResource MaterialDesignCircularProgressBar}"
                                                         Foreground="{StaticResource AccentBrush}"/>
                                        </Grid>
                                    </Grid>
                                </Border>

                                <!-- Name and count -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0">
                                    <TextBlock Text="{Binding Name}" FontSize="13" FontWeight="SemiBold"
                                               Foreground="#2C3E50" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock FontSize="11" Foreground="#95A5A6">
                                        <Run Text="{Binding Count, Mode=OneWay}"/>
                                        <Run Text=" 砖注专"/>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Rabbi Loading -->
                <StackPanel x:Name="RabbiLoadingBar" Grid.Row="1" Visibility="Collapsed"
                            VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Height="4" Width="100" Foreground="{StaticResource AccentBrush}"/>
                    <TextBlock Text="注..." TextAlignment="Center" Margin="0,8,0,0" Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>

                <Button Grid.Row="2" Content="注 砖" Click="RefreshButton_Click" 
                        Style="{StaticResource SecondaryButtonStyle}" Margin="0,20,0,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
