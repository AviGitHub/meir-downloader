<Window x:Class="MeirDownloader.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="מוריד שיעורים - Meir Downloader" Height="700" Width="1000"
        Background="#F5F5F5"
        FlowDirection="RightToLeft"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="#2C3E50">
            <StackPanel Margin="20">
                <TextBlock Text="מוריד שיעורים" FontSize="28" FontWeight="Bold" Foreground="White" TextAlignment="Right"/>
                <TextBlock Text="Meir Downloader - Download Lessons from Machon Meir" FontSize="12" Foreground="#BDC3C7" TextAlignment="Right" Margin="0,5,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Grid Grid.Column="0" Background="White" Margin="0,0,15,0">
                <StackPanel Margin="15">
                    <TextBlock Text="בחר רב" FontSize="14" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,10"/>
                    <ListBox x:Name="RabbiListBox" Height="200" Background="#ECF0F1" BorderThickness="0"
                             SelectionChanged="RabbiListBox_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" Padding="10,5"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock Text="בחר סדרה" FontSize="14" FontWeight="Bold" Foreground="#2C3E50" Margin="0,20,0,10"/>
                    <ListBox x:Name="SeriesListBox" Height="200" Background="#ECF0F1" BorderThickness="0"
                             SelectionChanged="SeriesListBox_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" Padding="10,5"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button Content="טען מחדש" Click="RefreshButton_Click" Background="#3498DB" Foreground="White" 
                            FontWeight="Bold" Padding="10,8" Margin="0,20,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Main Content Area -->
            <Grid Grid.Column="1" Background="White">
                <StackPanel Margin="15">
                    <TextBlock Text="שיעורים" FontSize="16" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,10"/>
                    
                    <DataGrid x:Name="LessonsGrid" AutoGenerateColumns="False" Background="White" 
                             RowHeaderWidth="0" BorderThickness="0" Margin="0,0,0,15" Height="300">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="שם השיעור" Binding="{Binding Title}" Width="*"/>
                            <DataGridTextColumn Header="רב" Binding="{Binding RabbiName}" Width="100"/>
                            <DataGridTextColumn Header="תאריך" Binding="{Binding Date}" Width="100"/>
                            <DataGridTemplateColumn Header="פעולה" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="הורד" Click="DownloadButton_Click" Background="#27AE60" 
                                               Foreground="White" Padding="8,4"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Status Bar -->
                    <Grid Background="#ECF0F1" Margin="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <ProgressBar x:Name="ProgressBar" Grid.Column="0" Height="20" Margin="10"/>
                        <TextBlock x:Name="StatusText" Grid.Column="1" Text="מוכן" VerticalAlignment="Center" Foreground="#2C3E50" Margin="10"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Footer -->
        <Grid Grid.Row="2" Background="#ECF0F1">
            <TextBlock Text="© 2026 Meir Downloader" Foreground="#7F8C8D" FontSize="11" Margin="15"/>
        </Grid>
    </Grid>
</Window>
